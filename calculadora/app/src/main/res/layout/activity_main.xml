<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/descarga" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor 1"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/etvalor1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Ingrese Valor 1"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor 2"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/etvalor2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Ingrese Valor 2"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvresultado"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formato de numeros"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

        <RadioButton
            android:id="@+id/rbsi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SI"
            />

        <RadioButton
            android:id="@+id/rbno"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="NO" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/cbiva"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Â¿Incluye IVA?"
            android:layout_gravity="center_horizontal">

        </CheckBox>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btsumar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />

        <Button
        android:id="@+id/btrestar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="-"
        android:textStyle="bold"
        />

        <Button
            android:id="@+id/btmultiplicar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="*"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btdividir"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="/"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btlimpiar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="Limpiar"
            android:textStyle="bold"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btenviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:textAllCaps="false" > <!--esto es para poner la primera letra del texto en mayuscula y el resto minuscula-->
    </Button>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#2196F3"
        />

    <TextView
    android:id="@+id/tvusuarior"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_gravity="center_horizontal"
    android:textAlignment="center"
    android:textStyle="bold"
    android:textColor="#2196F3"
    />


</LinearLayout>